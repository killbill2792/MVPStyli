{
  "expo": {
    "name": "Stylit",
    "slug": "MVPStyli",
    "scheme": "stylit",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": false,
      "icon": "./assets/icon.png",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#000000"
      },
      "bundleIdentifier": "ai.stylit.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Stylit needs access to your photo library to upload photos for skin tone analysis, body measurements, and to share your outfits with friends.",
        "NSCameraUsageDescription": "Stylit uses your camera to take selfies for skin tone analysis and capture photos of garments for personalized fit and color recommendations.",
        "NSPhotoLibraryAddUsageDescription": "Stylit saves your styled outfit images to your photo library so you can share them with friends.",
        "LSApplicationQueriesSchemes": [
          "whatsapp",
          "instagram",
          "tiktok",
          "sms",
          "mailto"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "ai.stylit.app"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true,
            "deploymentTarget": "15.1"
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a3c43d00-e9b0-4ec8-a9e4-4d4f8d6c86f9"
      }
    }
  }
}
