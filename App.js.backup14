          </View>
          <View style={{ flexDirection: 'row', gap: 8, marginTop: 10 }}>
            {[15, 30, 60, 120].map(v => (
              <Pressable key={v} onPress={() => setDuration(v)} style={[s.btn, s.btnGhost]}><Text>{v}m</Text></Pressable>
